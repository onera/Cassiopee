#! /bin/sh
# *Cassiopee* Compilation Environment

#-----------------------------------------------------------------------------
if [ "$CASSIOPEE" = "" ]; then
    echo 'You must specify a CASSIOPEE variable in your environment.'
    echo 'This variable specifies the installation path of *Cassiopee*.'
else
    if [ -e $CASSIOPEE/Cassiopee/Envs/sh_Cassiopee_local ]; then
        . $CASSIOPEE/Cassiopee/Envs/sh_Cassiopee_local
    elif [ -e $CASSIOPEE/Dist/sh_Cassiopee_local ]; then
        . $CASSIOPEE/Dist/sh_Cassiopee_local
    elif [ -e $CASSIOPEE/sh_Cassiopee_local ]; then
        . $CASSIOPEE/sh_Cassiopee_local
    else
        echo 'Could not load prod. File sh_Cassiopee_local not found'
    fi
fi

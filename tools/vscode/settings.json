{
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "[c]": { "editor.tabSize": 2 },
    "[cpp]": { "editor.tabSize": 2 },
    "files.exclude": {
        "**/build": true,
        "Dist": true,
        "Cassiopee/ThirdParty": true,
        "**/.git": true,
        "**/*.ref*": true,
        "**/__pycache__": true,
        "Cassiopee/OCC/OCC/occ_inc": true,
        "Cassiopee/OCC/OCC/occ_src": true,
        "**/.sconsign.dblite": true,
        "**/*.pyc": true,
        "**/Data": true,
        "**/*.log": true,
        "Cassiopee/KCore/doc/source": true,
        "Cassiopee/ValidData*": true,
        "docs/doc/*": true,
        "**/*~": true
    },
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.snippetSuggestions": "none",
    "editor.autoClosingBrackets": "never",
    "python.autoComplete.addBrackets": false,
    "python.linting.pylintArgs": [
        "--disable", "E1101", // no-member
        "--disable", "C0103", // invalid-name (snake_cat)
        "--disable", "W0311", // bad-identation
        "--disable", "C0303", // trailing-whitespace
        "--disable", "C0321", // multiple statement on a single line
        "--disable", "C0415", // import outside toplevel
        "--disable", "W0212", // protected-access acr nous utilisons _ pour le inplace et non le prive
        "--disable", "C0301", // line too long
        "--disable", "W0707", // raise-missing_from (python3)
    ],
    
    "python.analysis.extraPaths": [
        "${workspaceFolder}/Dist/bin/win64/lib/python3.12/site-packages",
        ],
    "python.analysis.completeFunctionParens": true,

    "C_Cpp.default.compilerPath": "C:/msys64/mingw64/bin/gcc.exe",
    "C_Cpp.default.includePath": [
        "${default}", 
        "C:/msys64/mingw64/include",
        "C:/msys64/mingw64/include/python3.12",
        "C:/msys64/mingw64/include/opencascade",
        "${workspaceFolder}/Cassiopee/KCore/KCore",
        "${workspaceFolder}/Cassiopee/Converter/Converter",
        "${workspaceFolder}/Cassiopee/Transform/Transform",
        "${workspaceFolder}/Cassiopee/Connector/Connector",
        "${workspaceFolder}/Cassiopee/Intersector/Intersector",
        "${workspaceFolder}/Cassiopee/CPlot/CPlot",
        "${workspaceFolder}/Cassiopee/CPlot/CPlot/Shaders"
    ],

}
